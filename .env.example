# ZenMux API Configuration
# Copy this file to .env and fill in your actual values

# API Key for ZenMux (OpenAI-compatible)
ZENMUX_API_KEY=your_api_key_here

# API Base URL
ZENMUX_BASE_URL=https://zenmux.ai/api/v1

# Model to use for grading
ZENMUX_MODEL=google/gemini-3-flash-preview

# Grading Configuration
# Number of passes for multi-pass grading (1-5, default: 3)
GRADING_PASSES=3

# Temperature for LLM (0.0 = deterministic, default: 0.0)
LLM_TEMPERATURE=0.0

# Maximum variance allowed between passes before flagging (percentage, default: 5)
MAX_VARIANCE_PERCENT=5

# Strictness mode: "proportional" or "hard_fail"
STRICTNESS_MODE=proportional
